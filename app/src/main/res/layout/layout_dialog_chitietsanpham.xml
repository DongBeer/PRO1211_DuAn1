<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF">

    <androidx.cardview.widget.CardView
        android:backgroundTint="#03A9F4"
        android:id="@+id/cvctsp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:src="@drawable/back_icon1"
            android:id="@+id/imgbackCTSP"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết sản phẩm"
            android:fontFamily="@font/arbutus_slab"
            android:textSize="20dp"
            android:textColor="#fff"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linearctsp"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_below="@+id/cvctsp">

        <ImageView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:id="@+id/imgSPCT"
            android:background="@drawable/custom_boder_linear"
            android:src="@drawable/add_imgsp"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tên SP: "
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acer Nitro "
                android:textSize="17dp"
                android:id="@+id/tvTenspCT"
                android:fontFamily="@font/arbutus_slab"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mô tả: "
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM 12GB - SSD 512GB - 14.0 inch"
                android:textSize="17dp"
                android:id="@+id/tvMotaspCT"
                android:fontFamily="@font/arbutus_slab"
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Thương hiệu: "
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dell "
                android:textSize="17dp"
                android:id="@+id/tvTHspCT"
                android:fontFamily="@font/arbutus_slab"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giá: "
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 15000000 "
                android:textSize="17dp"
                android:id="@+id/tvGiaspCT"
                android:fontFamily="@font/mali"
                android:textColor="#FB0D0D"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/linearctsp"
        android:layout_marginTop="20dp"
        app:cardElevation="10dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_star1"/>
        <ImageView
            android:layout_marginLeft="22dp"
            android:layout_marginTop="20dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_star1"/>
        <ImageView
            android:layout_marginLeft="34dp"
            android:layout_marginTop="20dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_star1"/>
        <ImageView
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_star1"/>

        <ImageView
            android:layout_marginLeft="58dp"
            android:layout_marginTop="20dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_star1"/>

        <TextView
            android:id="@+id/tvTBCdanhgia"
            android:layout_marginLeft="75dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            android:layout_marginTop="14dp"/>

        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã bán"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="110dp"/>

        <TextView
            android:id="@+id/tvsldaban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="160dp"/>

        <ImageView
            android:id="@+id/imgtrangthaisp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/heart_icon"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="250dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#F6F4F4">

        <LinearLayout
            android:layout_width="200dp"
            android:background="#0C6159"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvThemvaogiohang"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/arbutus_slab"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="200dp"
            android:layout_width="match_parent"
            android:background="#FF5722"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMuângy"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mua ngay"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:fontFamily="@font/arbutus_slab"/>

        </LinearLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>