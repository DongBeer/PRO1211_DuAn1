<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm sản phẩm"
        android:textSize="20dp"
        android:fontFamily="@font/mali"
        android:gravity="center"/>

    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:id="@+id/AddimgSP"
        android:background="@drawable/custom_boder_linear"
        android:src="@drawable/add_imgsp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Tên SP: "
            android:fontFamily="@font/mali"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTensp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edTenSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="@font/arbutus_slab"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Mô tả: "
            android:fontFamily="@font/mali"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutmoTaSP"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edMotaSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="@font/arbutus_slab"
                android:maxLines="3"
                android:singleLine="true"
                android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="270dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thương hiệu"
        android:fontFamily="@font/mali"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <Spinner
        android:layout_marginLeft="100dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/spnTH"
        />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Giá SP: "
            android:fontFamily="@font/mali"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutGiasp"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edGiaSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/arbutus_slab"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Loại SP: "
            android:fontFamily="@font/mali"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutLoaisp"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edLoaiSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:fontFamily="@font/arbutus_slab"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:fontFamily="@font/mali"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutSLsp"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edSoluongSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/arbutus_slab"
                android:maxLines="1"
                android:singleLine="true"
                android:textStyle="bold"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="   ← Hủy  "
            android:background="@drawable/custom_button_login"
            android:id="@+id/tvCanclerAdd"
            android:textColor="#fff"
            android:fontFamily="@font/mali"
            />
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:text="    Thêm + "
            android:background="@drawable/custom_bg_button"
            android:id="@+id/tvAddSP"
            android:textColor="#fff"
            android:fontFamily="@font/mali"
            />
    </LinearLayout>

</LinearLayout>